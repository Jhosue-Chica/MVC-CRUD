@model IEnumerable<U2Lab2.Models.Cliente>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <p class="text-center">
                <a asp-action="Create" class="btn btn-success btn-lg">Crear Nuevo Cliente</a>
            </p>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreCli)</th>
                        <th>@Html.DisplayNameFor(model => model.CedulaCli)</th>
                        <th>@Html.DisplayNameFor(model => model.CorreoCli)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaNacimientoCli)</th>
                        <th>@Html.DisplayNameFor(model => model.ImagenUrlCli)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreCli)</td>
                            <td>@Html.DisplayFor(modelItem => item.CedulaCli)</td>
                            <td>@Html.DisplayFor(modelItem => item.CorreoCli)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaNacimientoCli)</td>
                            <td><img src="@item.ImagenUrlCli" alt="Imagen de @item.NombreCli" style="width:100px;height:auto;" /></td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IdCli" class="btn btn-primary btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdCli" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCli" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
